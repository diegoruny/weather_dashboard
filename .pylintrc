[MASTER]
# Directories to ignore
ignore=venv,__pycache__,migrations,tests,node_modules

[MESSAGES CONTROL]
# Disable some noisy warnings
disable=C0114,C0115,C0116,R0903   # missing module, class, function docstrings, too few public methods

[FORMAT]
max-line-length=120

[TYPECHECK]
# Ignore import errors for local packages
ignored-modules=pytest
